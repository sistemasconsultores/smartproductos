{
  "name": "smartenrich",
  "private": true,
  "version": "1.0.0",
  "description": "SmartEnrich - Shopify product enrichment app with AI",
  "scripts": {
    "build": "remix vite:build",
    "dev": "shopify app dev",
    "start": "remix-serve ./build/server/index.js",
    "worker": "tsx worker/index.ts",
    "setup": "prisma generate && prisma migrate deploy",
    "docker-start": "npm run setup && npm run start",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "typecheck": "tsc --noEmit",
    "shopify": "shopify"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@shopify/app-bridge-react": "^4.1.3",
    "@shopify/polaris": "^13.9.0",
    "@shopify/shopify-api": "^11.5.0",
    "@shopify/shopify-app-remix": "^3.4.0",
    "@shopify/shopify-app-session-storage-prisma": "^5.1.0",
    "bullmq": "^5.25.0",
    "ioredis": "^5.4.0",
    "isbot": "^5.1.0",
    "minio": "^8.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sanitize-html": "^2.14.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.0",
    "@shopify/api-codegen-preset": "^1.1.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/sanitize-html": "^2.13.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
